<%= form_with class: 'row g-3', html: { multipart: true }, model: item do |form| %>
  <div class="col-md-6">
    <%= form.label :name, class: 'form-label' %><br>
    <%= form.text_field :name, class: 'form-control' %>
    <% item.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= form.label :price, class: 'form-label' %><br>
    <%= form.number_field :price, class: 'form-control' %>
    <% item.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="col-md-12">
    <%= form.label :description, class: 'form-label' %><br>
    <%= form.text_area :description, class: 'form-control', rows: '5' %>
    <% item.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="col-md-12">
    <%= form.label :image, class: 'form-label' %><br>
    <%= form.file_field :image, class: 'form-control' %>
    <% item.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="col-12">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>